@page
@model MilkStore.WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to MilkStore</h1>

@if (!string.IsNullOrEmpty(Model.UserName))
{
    <div>
        <img src="@Model.AvatarUrl" alt="User Avatar" style="width: 50px; height: 50px; border-radius: 50%;" />
        <span>Hello, @Model.UserName</span>
    </div>
    <div>
        <span>Google Token: @Model.GoogleToken</span>
    </div>
    <form method="post" asp-page-handler="Logout">
        <button type="submit">Logout</button>
    </form>
}
else
{
    <p>Please <a asp-page="/Login">log in</a>.</p>
}
